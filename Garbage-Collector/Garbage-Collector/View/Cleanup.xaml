<UserControl x:Class="Garbage_Collector.View.Cleanup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Garbage_Collector.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:CleanupVM />
    </UserControl.DataContext>

    <Grid Margin="15">
        <StackPanel>
            <TextBlock Foreground="White" Text="Directory Path:" />
            <TextBox Text="{Binding DirectoryPath, UpdateSourceTrigger=PropertyChanged}" Width="300" />

            <TextBlock Foreground="White" Text="Older Than Days:" Margin="0,10,0,0" />
            <TextBox Text="{Binding OlderThanDays, UpdateSourceTrigger=PropertyChanged}" Width="300" />

            <TextBlock Foreground="White" Text="File Patterns (comma separated):" Margin="0,10,0,0" />
            <TextBox Text="{Binding FilePatterns}" Width="300" />

            <Button Content="Clean Up" Command="{Binding CleanupCommand}" Margin="0,20,0,0" />
            <TextBlock Text="{Binding StatusMessage}" Margin="0,10,0,0" Foreground="Red" />
        </StackPanel>
    </Grid>
</UserControl>