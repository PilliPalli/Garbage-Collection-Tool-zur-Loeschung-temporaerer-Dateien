<Application x:Class="Garbage_Collector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Garbage_Collector"
             xmlns:utils="clr-namespace:Garbage_Collector.Utilities"
             StartupUri="/View/Login.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:CustomColorTheme BaseTheme="Dark" PrimaryColor="#339AF0" SecondaryColor="MediumBlue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="/Styles/Page.xaml" />
                <ResourceDictionary Source="/Styles/Image.xaml" />
                <ResourceDictionary Source="/Styles/Button.xaml" />
                <ResourceDictionary Source="/Styles/Text.xaml"/>
                <ResourceDictionary Source="/Utilities/DataTemplate.xaml"/>
               
                
            </ResourceDictionary.MergedDictionaries>
            <utils:AdminVisibilityConverter x:Key="AdminVisibilityConverter" />
        </ResourceDictionary>

    </Application.Resources>
</Application>


